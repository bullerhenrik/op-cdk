{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "build",
    "moduleResolution": "Bundler",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    // "typeRoots": [
    //   "./node_modules/@types"
    // ],
    "types": ["vitest/globals"] // See https://vitest.dev/config/*/
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node", // Handle ESM resolution in ts-node.
    "esm": true // Enable ESM mode for ts-node.
  },
  "exclude": ["node_modules", "cdk.out", "examples", "build"],
  "include": ["bin/**/*", "lib/**/*", "test/**/*", "vitest.config.mts"]
}
